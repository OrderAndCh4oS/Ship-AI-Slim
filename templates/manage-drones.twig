{% extends 'base.twig' %}

{% block title_tag %}
    {{ parent() }} Manage Drones
{% endblock %}

{% block content %}
    <h1 class="title green">Squadron name: {{ drones[0].squadron.name }}</h1>
    <p class="small-title green">Cash: {{ drones[0].squadron.cash }}</p>
    <p class="red">{{ message }}</p>
    <list-drone :drones="drones"></list-drone>
    <p>
        <a href="{{ path_for('manage-squadron') }}">Back</a>
    </p>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="/app/errors.js"></script>
    <script src="/app/form.js"></script>
    <script src="/app/squadron/squadron-list.js"></script>
    <script src="/app/squadron/squadron-item.js"></script>
    <script src="/app/squadron/create-squadron.js"></script>
{% endblock %}